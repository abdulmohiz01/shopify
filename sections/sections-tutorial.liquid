        },
        {
            "type": "html",
            "label": "HTML",
            "id": "html_setting"
        },
        {
            "type": "liquid",
            "label": "Liquid",
            "id": "liquid_setting"
        },
        {
            "type": "product",
            "id": "product_setting",
            "label": "Product"
        },
        {
            "type": "product_list",
