        },
        {
            "type": "font_picker",
            "id": "font_setting",
            "label": "Font Setting",
            "default": "assistant_n4"
        }

    ],
    "blocks": [
        {
            "type": "section_product",
            "name": "Product",
            "settings": [
                {
                    "type": "product",
                    "label": "Product",
                    "id": "product_setting"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "info": "optional. Will override the Product's Title if defined'"
                },
